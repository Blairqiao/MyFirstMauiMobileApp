<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="MyFirstMauiMobileApp.Resources.Styles.ButtonStyles">

    <Style x:Key="TileButton"
           TargetType="Button">

        <Setter Property="Margin" Value="4" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="BackgroundColor" Value="SteelBlue" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Fill" />

    </Style>

    <Style x:Key="LayoutButton"
           TargetType="Button">

        <Setter Property="Margin" Value="4" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="BackgroundColor" Value="DarkTurquoise" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Fill" />

    </Style>

</ResourceDictionary>