<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiMobileApp.View.ImagesPage"
             Title="{Binding Title}">

    <ContentPage.Resources>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="4" />
            <Setter Property="HeightRequest" Value="50" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="BackgroundColor" Value="DarkTurquoise" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="HorizontalOptions" Value="Fill" />
        </Style>

    </ContentPage.Resources>


    <VerticalStackLayout>

        <Grid Padding ="10" Margin = "0, 15, 0, 0" >

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" 
                    Grid.Column="0" 
                    Text="{Binding URI}"
                    Command="{Binding URIClickedCommand}"/>

            <Button Grid.Row="0" 
                    Grid.Column="1" 
                    Text="{Binding Embedded}"
                    Command="{Binding EmbeddedClickedCommand}"/>

            <Button Grid.Row="1" 
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Text="{Binding ActivityIndicator}"
                    Command="{Binding ActivityIndicatorClickedCommand}"/>

        </Grid>

    </VerticalStackLayout>


</ContentPage>