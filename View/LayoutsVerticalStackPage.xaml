<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiMobileApp.View.LayoutsVerticalStackPage"
             Title="{Binding Title}">
    
    <VerticalStackLayout>

        <BoxView WidthRequest="100" HeightRequest="100" Color="Red"/>

        <Grid HorizontalOptions="Center">
            <BoxView WidthRequest="100" HeightRequest="100" Color="Green"/>
        </Grid>

        <BoxView WidthRequest="100" HeightRequest="100" Color="Blue"/>

        <Grid HorizontalOptions="End">
            <BoxView WidthRequest="100" HeightRequest="100" Color="Purple"/>
        </Grid>
        
    </VerticalStackLayout>
    
</ContentPage>