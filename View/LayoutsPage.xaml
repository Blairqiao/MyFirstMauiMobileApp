<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiMobileApp.View.LayoutsPage"
             Title= "{Binding Title}">

    <VerticalStackLayout>

        <Grid Padding ="10" Margin = "0, 15, 0, 0" >

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" 
                    Grid.Column="0" 
                    Text="{Binding Stack_Layout}"
                    Style="{StaticResource LayoutButton}"
                    Command="{Binding StackLayoutClickedCommand}"/>

            <Button Grid.Row="0" 
                    Grid.Column="1" 
                    Text="{Binding Absolute_Layout}"
                    Style="{StaticResource LayoutButton}" 
                    Command="{Binding AbsoluteLayoutClickedCommand}"/>

            <Button Grid.Row="1" 
                    Grid.Column="1" 
                    Text="{Binding Vertical_Stack}"
                    Style="{StaticResource LayoutButton}" 
                    Command="{Binding VerticalStackClickedCommand}"/>

            <Button Grid.Row="2" 
                    Grid.Column="1"
                    Text="{Binding Horizontal_Stack}"
                    Style="{StaticResource LayoutButton}"
                    Command="{Binding HorizontalStackClickedCommand}"/>

            <Button Grid.Row="1" 
                    Grid.Column="0"
                    Grid.RowSpan="2"
                    HeightRequest="106"
                    Text="{Binding Flex_Layout}"
                    Style="{StaticResource LayoutButton}"
                    Command="{Binding FlexLayoutClickedCommand}"/>

        </Grid>

    </VerticalStackLayout>

</ContentPage>