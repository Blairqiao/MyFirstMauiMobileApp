<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiMobileApp.View.LayoutsPage"
             Title="LayoutsPage">

    <VerticalStackLayout>

        <Grid Margin = "5, 30, 5, 0" >

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" 
                Grid.Column="0" 
                Text="Stack Layout"
                Style="{StaticResource LayoutButton}" 
                Command="{Binding OnLayoutsClicked}"/>

            <Button Grid.Row="0" 
                Grid.Column="1" 
                Text="Absolute Layout"
                Style="{StaticResource LayoutButton}" />

            <Button Grid.Row="1" 
                Grid.Column="0" 
                Grid.ColumnSpan="2"
                Text="Vertical Stack"
                Style="{StaticResource LayoutButton}" />

            <Button Grid.Row="2" 
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Text="Horizontal Stack"
                Style="{StaticResource LayoutButton}" />

        </Grid>

    </VerticalStackLayout>

</ContentPage>