<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiMobileApp.View.CollectionEditPage"
             Title="CollectionEditPage">

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Start">

        <Label Text="Movie Title"
               FontAttributes="Bold"
               FontSize="Large"/>

        <Entry Text="{Binding MovieName, Mode=TwoWay}"
               FontSize="Medium"
               TextColor="Blue"/>

        <Button x:Name="saveBtn"
                Text="Save"
                Command="{Binding SaveClickedCommand}"
                BackgroundColor="Green"
                TextColor="White"
                FontAttributes="Bold"
                HorizontalOptions="Fill"/>

    </VerticalStackLayout>


</ContentPage>