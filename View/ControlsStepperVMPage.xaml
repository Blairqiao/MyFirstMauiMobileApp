<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiMobileApp.View.ControlsStepperVMPage"
             Title="ControlsStepperVMPage">

    
    <Grid Margin="20"
          RowDefinitions="Auto, Auto"
          ColumnDefinitions="*">

        <Grid Grid.Row="0"
              HeightRequest="200"
              WidthRequest="200"
              HorizontalOptions="Center"
              VerticalOptions="Center">

            <Label x:Name="RotatingLabel"
                     Text="Rotating Text"
                     FontSize="Large" FontAttributes="Bold,Italic"
                     HorizontalOptions="Center" VerticalOptions="Center"
                     AnchorX="0.5" AnchorY="0.5"
                     Rotation="{Binding StepperValue}"/>

        </Grid>

        <VerticalStackLayout Grid.Row="1"
                             Spacing="10"
                             HorizontalOptions="Center">

            <Stepper Minimum="0" Maximum="360"
                     Increment="10" Value="{Binding StepperValue}"
                     WidthRequest="300"
                     HorizontalOptions="Center"/>

            <Label FontSize="Large" FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Text="{Binding LabelText}"/>

        </VerticalStackLayout>

    </Grid>


</ContentPage>