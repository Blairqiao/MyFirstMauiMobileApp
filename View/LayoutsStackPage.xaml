<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiMobileApp.View.LayoutsStackPage"
             Title="{Binding Title}">


    <StackLayout>

        <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <BoxView WidthRequest="150" HeightRequest="150" Color="LightBlue"/>
        </StackLayout>

        <StackLayout HorizontalOptions="End" VerticalOptions="StartAndExpand">
            <BoxView WidthRequest="200" HeightRequest="100" Color="LightGreen"/>
        </StackLayout>

        <StackLayout HorizontalOptions="Start" VerticalOptions="EndAndExpand">
            <BoxView WidthRequest="90" HeightRequest="180" Color="LightPink"/>
        </StackLayout>

    </StackLayout>


</ContentPage>