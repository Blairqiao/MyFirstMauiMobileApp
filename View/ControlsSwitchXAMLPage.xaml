<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiMobileApp.View.ControlsSwitchXAMLPage"
             Title="{Binding Title}">

    <FlexLayout Direction="Column"
                JustifyContent="Center"
                AlignContent="Center">

        <Label x:Name="label" Text="Switch Example" HorizontalOptions="Center"
               FontSize="Large" TextColor="Blue" FontAttributes="Bold"/>

        <Switch x:Name="toggleSwitch" 
                IsToggled="True" 
                Toggled="SwitchToggled" 
                ThumbColor="Blue" 
                HorizontalOptions="Center"/>

    </FlexLayout>

</ContentPage>