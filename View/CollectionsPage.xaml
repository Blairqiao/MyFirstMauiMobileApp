<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyFirstMauiMobileApp.Model.Entities"
             x:Class="MyFirstMauiMobileApp.View.CollectionsPage"
             Title="{Binding Title}">

    <VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Movies" FontSize="50" FontAttributes="Bold" WidthRequest="170"/>
        </VerticalStackLayout>

        <BoxView HeightRequest="2" BackgroundColor="Black"/>

        <CollectionView x:Name="ItemsListView"
                        ItemsSource="{Binding MarvelMoviesCollection}"
                        SelectionMode="None">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:MarvelMovies">
                    <Grid Padding="2">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <HorizontalStackLayout>
                            <VerticalStackLayout>
                                <Label Text="{Binding NameofMovie}" FontAttributes="Bold" HorizontalTextAlignment="Start"
                                       FontSize="Medium"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                        
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
        </CollectionView>

    </VerticalStackLayout>
    
</ContentPage>