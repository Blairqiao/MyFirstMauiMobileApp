<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyFirstMauiMobileApp.Model.Entities"
             x:Class="MyFirstMauiMobileApp.View.CollectionsImagesPage"
             Title="CollectionsImagesPage">
    
    <VerticalStackLayout BackgroundColor="White">
        <CollectionView x:Name="ItemsListView"
                 ItemsSource="{Binding MarvelCharactersCollection}"
                 SelectionMode="None">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:MarvelCharacters">
                    <Grid Padding="2">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <HorizontalStackLayout Padding="10" Spacing="10">
                            <Image Source="{Binding ImagePath}" HeightRequest="100" WidthRequest="100" Aspect="Fill"/>
                            
                            <VerticalStackLayout Margin="0,15,0,0">
                                <Label Text="{Binding NameofCharacter}" FontAttributes="Bold" HorizontalTextAlignment="Start"
                                       FontSize="Medium" TextColor="MediumAquamarine"/>
                                <Label Text="{Binding NameofActor}" FontAttributes="Italic,Bold" HorizontalTextAlignment="Start"
                                       FontSize="Medium" TextColor="Blue"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <BoxView Margin="0, 150, 0,0" HeightRequest="2" BackgroundColor="Black"/>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </VerticalStackLayout>
    
</ContentPage>